<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= apptitle %></h1>
    <p>NomadHideout photo application</p>
    <h3><a href="/upload">Upload Images</a></h3>
    <hr>
    <div id="photos">
      <% photos.forEach(function(photo) { %>
        <div class="photo">
          <h2><%= photo.name %></h2>
          <img src="<%= photo.path %>" />
        </div>

      <% }) %>

      <% savedPhotos.forEach(function(photo) { %>
        <div class="photo">
          <h2><%= photo.name %></h2>
          <img src="/photos/<%= photo.path %>" />
        </div>

      <% }) %>
    </div>
  </body>
</html>
